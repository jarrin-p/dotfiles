cmd quit-and-cd &{{
    pwd > $LF_CD_FILE
    lf -remote "send $id quit"
}}

cmd quit &{{
    lf -remote "send $id quit"
}}

cmd fzf ${{
    choice=$(fzf --layout=reverse)
    test -z "$choice" && exit 0
    if test -d "$choice"
    then
        lf -remote "send cd $choice"
    else
        lf -remote "send cd $(dirname $choice)"
    fi
}}

set shell bash
set relativenumber true
set hidden true
map Q quit
map q quit-and-cd
map f fzf
# vim: ft=lf
